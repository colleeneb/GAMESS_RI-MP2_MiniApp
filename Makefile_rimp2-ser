FC=mpifort
FFLAGS=-qsmp=omp -qsuffix=cpp=f90 -g 
LDFLAGS= -L$(OLCF_ESSL_ROOT)/lib64 -lessl
EXES=rimp2

all: $(EXES)

rimp2: rimp2_energy_whole_KERN.o
	$(FC) -o $@ $(FFLAGS) $^ $(LDFLAGS)


.SUFFIXES:
.SUFFIXES: .c .o .f90 .cu .cpp .cuf
.c.o:
	$(CC) $(CFLAGS) -c $<
.cpp.o:
	$(CXX) $(CXXFLAGS) -c $<
.f90.o:
	$(FC) $(FFLAGS) -c $<
.PHONY: clean
clean:
	rm -rf *.o *.mod $(EXES)
